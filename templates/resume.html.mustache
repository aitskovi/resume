<!DOCTYPE html>
<html>
  <head>
    <title>
      {{name}}
    </title>

    <link rel="stylesheet" type="text/css" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">

    <style>
      @media print {
        a[href]:after {
          content: none;
        }
      }

      .header-handle {
        content-align: center;
      }

      h1, h2, h3, h4 {
        margin-bottom: 0px;
      }

      h3 {
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <div class="col-xs-12">
      <h2>{{name}} <small class="header-handle">({{github}})</small></h2>
      <div class="col-xs-8">

        <h3>Experience</h3>

        {{#experience}}
        <h4>
          {{workplace}}
          <small>{{position}} | {{dates}}</small>
        </h4>
        <em class='text-right'>{{tools}}</em>
        <ul>
          {{#description}}
          <li>{{.}}</li>
          {{/description}}
        </ul>
        {{/experience}}

        <h3>Open Source</h3>
        <ul>
          {{#open_source}}
          <li><a href={{link}}>[{{project}}]</a> - {{description}}</li>
          {{/open_source}}
        </ul>

      </div>
      <div class="col-xs-4">
        <h3>Education</h3>
        {{#education}}
        <h4>{{school}} <small>{{dates}}</small></h4>
        {{description}}
        {{/education}}
      </div>
    </div>
  </body>
</html>
